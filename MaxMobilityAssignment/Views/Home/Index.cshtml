@{
    ViewBag.Title = "File Upload";
}

<h2>Upload Excel File</h2>

<form asp-action="Upload" asp-controller="Home" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="file">Upload Excel:</label>
        <input type="file" name="file" id="file" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@if (ViewBag.Message != null)
{
    <div class="alert alert-info">@ViewBag.Message</div>
}
@if (ViewBag.DownloadLink != null)
{
    <a href="@ViewBag.DownloadLink" class="btn btn-success">Download Uploaded File</a>
}
